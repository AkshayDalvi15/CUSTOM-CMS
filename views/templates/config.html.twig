{% extends 'layout.html.twig' %}

{% block body %}
	<div class="block-wrapper config_div mt-5 mb-3 d-flex justify-content-center">
		<form enctype="multipart/form-data" action="config" class="p-4" method="POST">
			<h3 class="text-uppercase mb-3">
				Configuration
			</h3>
			<div>
				<label for="edit-logo-upload" class="form-label text-uppercase fw-bolder">
					Upload Logo
				</label>
				<input aria-describedby="edit-logo-upload--description" type="file" id="edit-logo-upload" name="logo_upload" size="60" class="form-control" required/>
				<div class="form-group mb-3 required">
					<input name="alt_text" class="form-control required" placeholder="Alternative text" autocomplete="off" required/>
				</div>
				<div class="form-group mb-3 required">
					<input id="edit-site-name" name="site_name" class="form-control required" placeholder="Site Name" autocomplete="off" required/>
				</div>
			</div>


			<div>
				{% for r in footer %}
					<label for="edit-logo-upload" class="form-label text-uppercase fw-bolder">
						Footer Details
					</label>
					<div>
						<label class="required">Description</label>
						<textarea id="edit-site-name" name="footer_desc" class="form-control mt-1 mb-3" placeholder="Footer Description*" autocomplete="off" rows="8" required>{{ r.description }}</textarea>
					</div>

					<div>
						<label class="required">Location</label>
						<input id="edit-site-name" name="footer_location" class="form-control mt-1 mb-3" placeholder="Location*" 
						value = {{ r.location }}
						autocomplete="off" required/>
					</div>

					<div>
						<label class="required">Contact</label>
						<input id="edit-site-name" name="footer_contact" class="form-control mt-1 mb-3" placeholder="Contact Number*"
						value = {{ r.contact }}
						 autocomplete="off" required/>
					</div>

					<div>
						<label class="required">Email ID</label>
						<input id="edit-site-name" name="footer_email" class="form-control mt-1 mb-3" placeholder="Email*" 
						value = {{ r.email }}
						autocomplete="off" required/>
					</div>

				{% endfor %}

				<button type="submit" name="submitBtn" class="btn sumbit-btn">
					Submit
				</button>
			</div>

		</form>
	</div>
{% endblock %}
