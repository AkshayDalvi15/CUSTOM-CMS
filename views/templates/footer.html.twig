<footer>
	{% for a in footer %}
		<div class="footer-wrapper">
			<div class="footer__container">
				<div class="footer__box1">
					<div class="logo__container mb-4">
						<a href="home">
							{% for r in logo %}
								<img src="{{ r.logo }}" alt="{{ r.alt_text }}"/>
							{% endfor %}
						</a>
					</div>


					<div class="footerBox1__aboutInfo mb-4">
						<p class="text-white">
							{{ a.description }}
						</p>
					</div>

					<div class="footerBox1__socialBox">
						<div class="socialBox__container">
							<ul>
								<li><a href="https://www.instagram.com/"><i class="fab fa-2x fa-instagram" target="_blank"></i></a></li>
								<li><a href="https://www.facebook.com/"><i class="fab fa-2x fa-facebook" target="_blank"></i></a></li>
								<li><a href="https://www.youtube.com/" target="_blank"><i class="fab fa-2x fa-youtube"></i></a></li>
								<li><a href="https://www.linkedin.com/" target="_blank"><i class="fab fa-2x fa-linkedin" target="_blank"></i></a></li>
							</ul>
						</div>
					</div>

				</div>

				<div class="footer__box2">
					<p class="address py-1">
						<i class="bi bi-geo-alt-fill"></i>
						<span>
              {{ a.location }}
						</span>
					</p>
					<p class="contact py-1">
						<i class="bi bi-telephone"></i>
						+91<span>
              {{ a.contact }}
              </span>
					</p>
					<p class="mail py-1">
						<i class="bi bi-envelope"></i>
						<a href="mailto:support@company.com">
              {{ a.email }}
						</a>
					</p>
				</div>
			</div>

			<div class="footer__copyrightContainer">
				<p class="text-white">
					Copyright Â© 2022 All rights reserved | Reverie CMS
				</p>
			</div>
		</div>
	{% endfor %}
</footer>
