{% extends 'layout.html.twig' %}


{% block body %}
	{% if username %}
		<h5>{{ username }}</h5>
		<h6>{{ role }}</h6>
	{% endif %}

	<div class="section1">
		<img src = "https://i.pinimg.com/originals/8b/4c/f5/8b4cf55476f5d9a662c23362a9d2a1ed.jpg">
	</div>
	<div class="section2 d-flex justify-content-evenly flex-wrap">
		{% for r in result %}

			<div class="info__details-item m-4">
				{# <li class='text-white'>{{ r.title }}</li>
				<li class='text-white'>{{ r.body }}</li> #}

				<div class="card" style="width: 18rem;">
					<img class="card-img-top" src="{{ r.image }}" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">{{ r.title }}</h5>
						<p class="card-text">{{ r.body }}</p>
						<a href="#" class="btn btn-primary">Go somewhere</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="inner-section section3 mt-1">Section 3</div>

{% endblock %}
